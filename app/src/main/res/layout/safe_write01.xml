<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 관찰자그룹 -->
        <LinearLayout
            android:id="@id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/layout_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/border_top"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@color/gary_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="관찰자"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textColor="#ff333333"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:id="@+id/textView1" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@color/gary_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="관찰장소"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="30dp"
                    android:paddingLeft="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/spinner1"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:background="@drawable/border_top"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@color/gary_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#ff333333"
                    android:text="관찰대상"
                    />

                <Spinner
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:id="@+id/spinner2"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:background="@drawable/border_top"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@color/gary_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#ff333333"
                    android:text="관찰일시"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue2"
                    android:background="@drawable/box_blueline"
                    android:id="@+id/date_button"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue2"
                    android:id="@+id/stime_button"
                    android:layout_width="65dp"
                    android:layout_height="25dp"
                    android:background="@drawable/box_blueline"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/textView16" />

                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue2"
                    android:gravity="center"
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/textButton2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue2"
                    android:gravity="center"
                    android:id="@+id/etime_button"
                    android:layout_width="65dp"
                    android:layout_height="25dp"
                    android:background="@drawable/box_blueline"
                    android:layout_alignTop="@+id/textButton1"
                    android:layout_toStartOf="@+id/linearLayout" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/border_top_bottom"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@color/gary_light"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:textColor="#ff333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:checkedButton="@+id/offer"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="상주"
                            android:textColor="@color/font_333"
                            android:textStyle="bold" />

                        <RadioButton
                            android:id="@+id/radio2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="교대"
                            android:textColor="@color/font_333"
                            android:textStyle="bold" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <!--리스트뷰-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                >

                <com.creative.seong.app.util.AnimatedExpandableListView
                    android:id="@+id/listView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/search_top"
                    android:divider="#00000000" />
            </LinearLayout>

        </LinearLayout>
    <!-- 버튼 -->
    <LinearLayout android:orientation="horizontal" android:id="@+id/layout_bottom" android:layout_width="fill_parent" android:layout_height="wrap_content" android:baselineAligned="false" android:layout_alignParentBottom="true">
        <LinearLayout android:background="@color/blue" android:layout_width="0.0dip" android:layout_height="50.0dip" android:layout_weight="1.0"
            android:id="@+id/linear1">
            <TextView android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/font_navtitle"
                android:gravity="center"
                android:id="@+id/textButton1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="저장" />
        </LinearLayout>
        <LinearLayout android:background="@color/blueviolet" android:layout_width="0.0dip" android:layout_height="50.0dip" android:layout_weight="1.0"
            android:id="@+id/linear2">

            <TextView android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/font_navtitle"
                android:gravity="center"
                android:id="@+id/textButton2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="삭제" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>