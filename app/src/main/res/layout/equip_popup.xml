<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <TextView android:textSize="22.0sp" android:textStyle="bold" android:textColor="#ffffffff" android:gravity="center" android:background="@drawable/pop_title_bg" android:layout_width="fill_parent" android:layout_height="42.0dp" android:text="설비점검" />
    <LinearLayout android:gravity="center_vertical"
        android:layout_width="match_parent" android:layout_height="40.0dp" android:layout_marginTop="15.0dp">

        <TextView android:textSize="18.0sp" android:textStyle="bold" android:textColor="#ff444444" android:layout_width="80.0dp" android:layout_height="wrap_content"
            android:text="구분"
            android:layout_marginLeft="15dp" />
        <Spinner android:id="@+id/spinner1" android:layout_width="fill_parent" android:layout_height="wrap_content"

            android:minWidth="295dp"
            android:spinnerMode="dialog" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="40.0dp" android:layout_marginTop="3.0dp"
        android:gravity="center_vertical">

        <TextView android:textSize="18.0sp" android:textStyle="bold" android:textColor="#ff444444" android:layout_width="80.0dp" android:layout_height="wrap_content"
            android:text="설비명"
            android:layout_marginLeft="15dp" />
        <Spinner android:id="@+id/spinner2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:spinnerMode="dialog"
            android:minWidth="295dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3.0dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="80.0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="근무조"
            android:textColor="#ff444444"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minWidth="295dp"
            android:spinnerMode="dialog" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="fill_parent"
        android:layout_height="40.0dp"
        android:layout_marginTop="3.0dp"
        android:layout_marginBottom="15.0dp" >

        <TextView
            android:textSize="18.0sp"
            android:textStyle="bold"
            android:textColor="#ff444444"
            android:layout_width="80.0dp"
            android:layout_height="wrap_content"
            android:text="점검자"
            android:layout_marginLeft="15dp" />

        <TextView
            android:enabled="false"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#ff444444"
            android:gravity="center_vertical"
            android:id="@+id/textView1"
            android:paddingLeft="10dp"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:text="점검자" />
    </LinearLayout>

    <!-- 버튼 -->
    <LinearLayout android:orientation="horizontal" android:id="@+id/layout_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false" android:layout_alignParentBottom="true">
        <LinearLayout android:background="@color/purple" android:layout_width="0.0dip" android:layout_height="50.0dip" android:layout_weight="1.0">
            <TextView android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/font_navtitle"
                android:gravity="center"
                android:id="@+id/textView3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="닫기" />
        </LinearLayout>
        <LinearLayout android:background="@color/blueviolet" android:layout_width="0.0dip" android:layout_height="50.0dip" android:layout_weight="1.0">
            <TextView android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/font_navtitle"
                android:gravity="center"
                android:id="@id/textView2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="다음" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>